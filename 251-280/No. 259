'No. 259
Private Sub Command9_Click()
Dim x() As Integer
n = Val(InputBox("N: "))
ReDim x(1 To n) As Integer
List1.Clear
Text1.Text = ""
Min = 100
For i = 1 To n
'Generate array
x(i) = Rnd * 200 - 100
List1.AddItem "x(" & i & ")=" & x(i)
'Find index of first Min
If x(i) < Min Then
Mi = i
Min = x(i)
End If
Next
Text1.Text = "Index: " & Mi
Text2.Text = "Number: " & Min
End Sub
