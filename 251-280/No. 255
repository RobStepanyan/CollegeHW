'No. 255
Private Sub Command5_Click()
Dim x() As Integer
n = Val(InputBox("N: "))
ReDim x(1 To n) As Integer
List1.Clear
Text1.Text = ""
Max = -100
For i = 1 To n
'Generate array
x(i) = Rnd * 200 - 100
List1.AddItem "x(" & i & ")=" & x(i)
'Find max + index of max
If x(i) > Max Then
Max = x(i) + i
End If
Next
Text1.Text = "Max + index = " & Max
End Sub
